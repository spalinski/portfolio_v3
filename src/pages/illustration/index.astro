---
import MainLayout from "../../layouts/MainLayout.astro";
// import Masonry from "../components/Masonry.astro";

import Heading from "../../components/Heading.astro";
import { Image } from "astro:assets";
import m3 from "../../images/art2024/mother3/M3Spritedex_cover2.png";
import funky from "../../images/art2024/funkiest-animal/00-cover.png";

// const images = await Astro.glob(
//   "../images/art2024/illustration/*.{jpg,jpeg,png,webp}"
