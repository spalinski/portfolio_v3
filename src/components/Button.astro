---
const { href, external, class: className } = Astro.props;
---

<div class={className}>
  <div
    class="bg-[url('/logo_cropped.png')] bg-no-repeat bg-contain bg-center p-6 flex items-center justify-center"
  >
    <div class="p-4 flex items-center justify-center">
      <a
        href={href}
        target={external ? "_blank" : undefined}
        class:list={["block", "no-underline", "hover:underline", "text-lg"]}
      >
        <slot />
      </a>
    </div>
  </div>
</div>

