---
import { Image } from "astro:assets";
const { images, columns } = Astro.props;
import LightBox from "./LightBox.astro";
const total = images.length;
---

<div class="w-full">
  <div
    class="columns-1 gap-2 sm:columns-2 md:columns-3 lg:columns-4 [&>img:not(:first-child)]:mt-1 lg:[&>img:not(:first-child)]:mt-1"
  >
    <!-- {images.map((im) => <Image src={im.default} class="" alt="image" />)} -->
    {images.map((im) => <LightBox im={im.default} />)}
  </div>
</div>
