---
const { mockup1, text1, mockup2, text2 } = Astro.props;
import { Image } from "astro:assets";
---

<!-- row 1 -->
<div class="bg-teal-300">
  <div
    class="text-lg border-2 border-mred py-24 flex flex-col items-center justify-center"
  >
    <p>Roaming/Personal Work</p>
    <a href="#" class="block pt-1 hover:underline"> See full spread </a>
    <span class="material-symbols-outlined"> arrow_forward </span>
  </div>
</div>
<div class="bg-teal-300 row-span-2">
  <Image
    src={mockup1}
    alt=""
    class="shadow-2xl rounded-lg object-contain w-full"
  />
</div>
<!-- row 2 -->
<div class="bg-teal-300 row-span-2">
  <Image src={mockup2} alt="" class="shadow-2xl rounded-lg object-contain" />
</div>
<div class="bg-teal-300">
  <div
    class="text-lg border-2 border-mred py-24 flex flex-col items-center justify-center"
  >
    <p>The Big Fish/Personal Work</p>
    <a href="#" class="block pt-1 hover:underline"> See full spread </a>
    <span class="material-symbols-outlined"> arrow_back </span>
  </div>
</div>
