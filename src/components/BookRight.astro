---
const { mockup, text, link } = Astro.props;
import { Image } from "astro:assets";
---

<!-- row 1 -->
<div class="">
  <div class="text-lg py-24 flex flex-col items-center justify-center">
    <p>{text}</p>
    <a href={link} class="block pt-1 hover:underline"> See full spread </a>
    <!-- <span class="material-symbols-outlined"> arrow_forward </span> -->
    <span class="material-symbols-outlined"> line_end_arrow_notch </span>
  </div>
</div>
<div class="row-span-2">
  <a href={link}>
    <Image
      src={mockup}
      alt=""
      class="shadow-2xl rounded-lg object-contain w-full"
    />
  </a>
</div>
