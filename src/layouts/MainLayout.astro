---
import Navbar from "../components/Navbar.astro";
import Footer from "../components/Footer.astro";
import { SITE_TITLE, SITE_DESCRIPTION } from "../constants";
import { Image } from "astro:assets";
import logo from "../images/logo_cropped.png";
---

<!doctype html>
<html lang="en" data-theme="light">
  <head>
    <!-- <base href="/miriam/" /> -->
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content={SITE_DESCRIPTION} />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Jost:ital,wght@0,100..900;1,100..900&display=swap"
      rel="stylesheet"
    />
    <title>{SITE_TITLE}</title>
  </head>
  <body class="font-jost text-slate-800 bg-msky">
    <div
      class="max-w-[1600px] mx-auto min-h-screen flex flex-col pt-6 px-8 lg:px-12"
    >
      <div class="relative">
        <Image
          src={logo}
          alt="Background Image"
          class="absolute top-0 left-0 z-0 h-16 w-auto -translate-x-4 -translate-y-2"
        />
        <Navbar
          siteName={SITE_TITLE}
          menuItems={[
            { tag: "books", href: "/books/" },
            {
              tag: "illustration",
              href: "/illustration/",
            },
            { tag: "about", href: "/about/" },
            {
              tag: "hire me!",
              href: "mailto:miriamspalinski.contact@gmail.com",
            },
          ]}
        />
      </div>
      <!-- <main class="flex-grow mt-2 px-0 mx-auto"> -->
      <main class="flex-grow">
        <slot />
      </main>

      <div class="relative mb-8">
        <!-- <Footer class="absolute top-0 left-0 right-0" /> -->
        <Footer />
        <div class="absolute inset-0 z-[-1] translate-y-14">
          <Image
            src={logo}
            alt="Background Image"
            class="h-16 object-center object-contain"
          />
        </div>
      </div>
      <script src="../../node_modules/flowbite/dist/flowbite.min.js"></script>
    </div>
  </body>
</html>
